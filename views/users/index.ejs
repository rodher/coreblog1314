
<header>
  <h2> Usuarios </h2>
</header>

<article>
<table>
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>

<% for (var i in users) { %>
  <tr>
     <td> <%= users[i].login %>  </td>
     <td> <%= users[i].name %>  </td>
     <td> <%= users[i].email %> </td>
     <td>
       <% var formname = 'fui' + i; %>
       <form method='post' action='/users/<%= users[i].id %>' id='<%= formname %>'>
          <input type='hidden' name='_method' value='delete'>
          <a href="/users/<%= users[i].id %>"> Ver </a>

          <% if (session.user && session.user.id == users[i].id) {%>
             <a href="/users/<%= users[i].id %>/edit"> Editar </a>
          <% } %>

          <% if (false) { %>
             <a href="" onclick="confirmarSubmit('Â¿Seguro que desea borrar el usuario?', 
                                                 '<%= formname %>'); return false"> Borrar </a> 
          <% } %>

       </form>
     </td>
  </tr>
<%  }; %>
</table>
</article>

<footer>
  <nav> <a href="/users/new"> Crear nuevo Usuario </a> </nav>
</footer>
